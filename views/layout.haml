!!! 5
%html
  %head
    %meta{ charset: 'utf-8' }
    %title
      Dotwave: #{@title.gsub /<[^>]+>/, ''}
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1' }
    %link{ href: 'http://fonts.googleapis.com/css?family=Work+Sans:500,300', rel: 'stylesheet', type: 'text/css' }
    %link{ href: '/stylesheets/application.css', rel: 'stylesheet', media: 'screen' }
  %body
    %p.branding
      %a.inner{ href: '/' }
        Dotwave
    - if flash
      .inner
        %p.flash= flash
    %h1.title
      %span.inner= @title
    .inner= yield
    %footer
      %p.inner
        %a{ href: 'http://twitter.com/johnholdun' }<
          John Holdun
        created Dotwave. It’s a labor of love, and
        = succeed '.' do
          %a{ href: 'https://github.com/johnholdun/dotwave' }<
            it’s on GitHub
    %script
      :plain
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-9018703-7', 'auto');
        ga('send', 'pageview');
